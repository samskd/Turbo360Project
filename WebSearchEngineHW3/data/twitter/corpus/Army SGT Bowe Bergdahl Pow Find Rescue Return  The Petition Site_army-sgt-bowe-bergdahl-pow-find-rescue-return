        <script>

        $(function() {
            var share_div = $("ul.care2_big_buttons_tps");

            $("a[data-width=640]", share_div).click(function(e) {
                var me = $(this);
                if(!me.attr("data-width") || !me.attr("data-height")) {
                    me.unbind();
                    return true;
                }

                e.preventDefault();

                var width = me.attr("data-width");
                var height = me.attr("data-height");
                var top = ($(window).height() / 2) - (height / 2);
                var left = ($(window).width() / 2) - (width / 2);
                var new_win = window.open(me.attr("href"), "care2_big_buttons_tps", "scrollbars=no,toolbar=no,width=" + width + ",height=" + height + ",top=" + top + ",left=" + left);
                new_win.focus();
            });
        });

    </script>
    

